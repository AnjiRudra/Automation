{
  "default": {
    "require": [
      "features/support/**/*.ts",
      "features/hooks/**/*.ts",
      "features/step_definitions/**/*.ts"
    ],
    "requireModule": ["ts-node/register"],
    "format": [
      "progress-bar",
      "html:cucumber-report.html",
      "json:reports/cucumber-report.json"
    ],
    "formatOptions": {
      "snippetInterface": "async-await"
    },
    "parallel": 2,
    "dryRun": false,
    "failFast": false,
    "paths": ["features/**/*.feature"]
  }
}
