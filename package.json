{
  "name": "playwright",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "cucumber-js",
    "test:headless": "cucumber-js --publish-quiet",
    "test:report": "cucumber-js --format json:reports/cucumber-report.json",
    "test:tags": "cucumber-js --tags",
    "test:webkit": "npx playwright test Tricentisdemowebsite.spec.ts --headed --project=webkit",
    "test:safari-macos": "BROWSERSTACK_USERNAME=$BROWSERSTACK_USERNAME BROWSERSTACK_ACCESS_KEY=$BROWSERSTACK_ACCESS_KEY npx playwright test --config=playwright-browserstack.config.ts --project='Safari-macOS-BrowserStack'",
    "test:chrome-macos": "BROWSERSTACK_USERNAME=$BROWSERSTACK_USERNAME BROWSERSTACK_ACCESS_KEY=$BROWSERSTACK_ACCESS_KEY npx playwright test --config=playwright-browserstack.config.ts --project='Chrome-macOS-BrowserStack'",
    "test:iphone-safari": "BROWSERSTACK_USERNAME=$BROWSERSTACK_USERNAME BROWSERSTACK_ACCESS_KEY=$BROWSERSTACK_ACCESS_KEY npx playwright test --config=playwright-browserstack.config.ts --project='iPhone-Safari-BrowserStack'",
    "setup:browserstack": "node setup-browserstack.js",
    "generate-pdf": "node generate-screenshot-pdf.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "pdfkit": "^0.13.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^10.0.0",
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.1",
    "playwright": "^1.57.0",
    "ts-node": "^10.9.2"
  }
}
